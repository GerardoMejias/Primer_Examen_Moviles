<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cr.ac.itcr.birdex.UserInsertionFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nuevo usuario"
            android:textSize="35dp"
            android:id="@+id/textView11"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="78dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre:"
            android:textSize="25dp"
            android:height="40dp"
            android:gravity="bottom|left"
            android:id="@+id/textView12"
            android:layout_below="@+id/textView11"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="18dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="250dp"
            android:height="40dp"
            android:textSize="25dp"
            android:id="@+id/txtUserName"
            android:layout_alignTop="@+id/textView12"
            android:layout_toRightOf="@+id/textView12"
            android:layout_toEndOf="@+id/textView12"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="18dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CÃ©dula:"
            android:textSize="25dp"
            android:height="40dp"
            android:gravity="bottom|left"
            android:id="@+id/textView13"
            android:layout_below="@+id/txtUserName"
            android:layout_alignLeft="@+id/textView12"
            android:layout_alignStart="@+id/textView12" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="250dp"
            android:height="50dp"
            android:textSize="25dp"
            android:id="@+id/txtUserId"
            android:layout_below="@+id/textView12"
            android:layout_alignLeft="@+id/txtUserName"
            android:layout_alignStart="@+id/txtUserName" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clave:"
            android:textSize="25dp"
            android:height="40dp"
            android:gravity="bottom|left"
            android:id="@+id/textView14"
            android:layout_below="@+id/txtUserId"
            android:layout_alignLeft="@+id/textView13"
            android:layout_alignStart="@+id/textView13" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="250dp"
            android:height="43dp"
            android:textSize="25dp"
            android:id="@+id/txtUserPassword"
            android:layout_alignTop="@+id/textView14"
            android:layout_alignLeft="@+id/txtUserId"
            android:layout_alignStart="@+id/txtUserId" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Insertar"
            android:textSize="30dp"
            android:id="@+id/btnInsertUser"
            android:layout_marginBottom="35dp"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/textView11"
            android:layout_alignStart="@+id/textView11"
            android:layout_alignRight="@+id/textView11"
            android:layout_alignEnd="@+id/textView11" />

    </RelativeLayout>
</FrameLayout>
